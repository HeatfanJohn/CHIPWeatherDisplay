[Unit]
Description=Chip weather display

[Service]
#Type=simple
Type=forking
ExecStart=/bin/sh -c "/home/chip/CHIPWeatherDisplay/PiTFTWeather.py -i /home/chip/CHIPWeatherDisplay/ -p /home/chip/flickr/photoframe/"
Restart=no
RestartSec=2
StandardOutput=syslog
SyslogIdentifier=CHIPWeatherDisplay
Environment=PATH=/usr/bin:/usr/local/bin:/usr/sbin:/bin
WorkingDirectory=/home/chip/CHIPWeatherDisplay
#
User=root
Group=root

[Install]
WantedBy=multi-user.target
